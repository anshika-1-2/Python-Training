def fahrenheit_to_celsius(fahrenheit):
  return (fahrenheit - 32) * 5 / 9

print(f"fahrenheit to celsius(100) = {fahrenheit_to_celsius(100)}")
print(f"fahrenheit to celsius(32) = {fahrenheit_to_celsius(32)}")
print(f"fahrenheit to celsius(50) = {fahrenheit_to_celsius(50)}")